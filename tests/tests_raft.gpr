with "config/tests_raft_config.gpr";
project Tests_Raft is

   for Source_Dirs use ("src/", "config/");
   for Object_Dir use "obj/" & Tests_Raft_Config.Build_Profile;
   for Create_Missing_Dirs use "True";
   for Exec_Dir use "bin";
   for Main use ("tests_raft.adb");

   package Compiler is
      for Default_Switches ("Ada") use Tests_Raft_Config.Ada_Compiler_Switches;
   end Compiler;

   package Binder is
      for Switches ("Ada") use ("-Es"); --  Symbolic traceback
   end Binder;

   package Install is
      for Artifacts (".") use ("share");
   end Install;

end Tests_Raft;
